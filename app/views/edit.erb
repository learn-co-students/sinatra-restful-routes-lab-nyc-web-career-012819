<form action="/recipes/<%= @recipe.id %>" method = "post">
  <input type="hidden" name = "_method" value = "patch">
  <ul>
    <li>
      <label for="name"> Name </label>
      <input type="text" id = "name" name="name" value = "/recipes/<%= @recipe.name%>">
    </li>
    <li>
      <label for="ingredients"> Ingredients </label>
      <input type="text" id = "ingredients" name = "ingredients" value = "/recipes/<%= @recipe.ingredients%>">
    </li>
    <li>
      <label for="cook_time"> Cook Time</label>
      <input type="text" id = "cook_time" name = "cook_time" value = "/recipes/<%= @recipe.cook_time%>">
    </li>
  </ul>
  <input type="submit">
</form>
