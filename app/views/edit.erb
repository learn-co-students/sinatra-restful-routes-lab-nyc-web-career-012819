<h1>Edit Recipe</h1>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" id="hidden" value="patch">
  <p>Name: <input type="text" name="name" value="<%= @recipe.name %>"></p>
  <p>Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></p>
  <p><input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></p>
  <input type="submit" value="submit">
</form>

