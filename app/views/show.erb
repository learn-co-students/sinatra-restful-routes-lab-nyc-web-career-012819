<a href="/recipes/<%= @recipe.id %>/edit">Edit this Recipe</a><br>
<form method="post" action="/recipes/<%= @recipe.id %>">
  <label>Delete Recipe</<label>
  <input type="hidden" name="_method" value="delete" />
  <input type="submit" value="delete"/>
</form>
